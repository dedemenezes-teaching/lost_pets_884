<h1 class='text-center'>Pets</h1>
<div class="container">
  <div class="row">
    <ul>
      <% @pets.each do |pet| %>
      <div class="col-12 col-sm-6">
        <li>
          <%= link_to pet.name, pet_path(pet) %>
          <%= link_to 'Delete', pet_path(pet), method: 'DELETE', data: { confirm: 'Are you sure?' } %>
        </li>
      </div>
      <% end %>
    </ul>

  </div>
</div>
